{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "module": "esnext",
        "target": "es5",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "es2017.object"
        ],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "config"
    ]
}